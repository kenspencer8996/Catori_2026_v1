<Window x:Class="CatoriCity2025WPF.Views.FundsDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatoriCity2025WPF.Views"
        mc:Ignorable="d"
        Title="Funds Detail View" Height="410" Width="800" Background="{DynamicResource MainGradient}" WindowStyle="None">
    <Window.Resources>
        <DataTemplate x:Key="SharedItemTemplate">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding BusinessName}" Margin="5" />
                <TextBlock Grid.Column="1" Text="{Binding Amount}" Margin="5" />
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Content="Automatic Teller (ATM)" HorizontalContentAlignment="Center" Foreground="Red"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Funds"/>
        <TextBox x:Name="FundsTextBox" Grid.Row="1" Width="200" Grid.Column="1" 
                 Text="{Binding Money, Mode=TwoWay}" IsReadOnly="True"
                 HorizontalAlignment="Left"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Bank"/>
        <ComboBox x:Name="BankStackComboBox" Grid.Row="2" Grid.Column="1" SelectionChanged="BankStackComboBox_SelectionChanged">
            
        </ComboBox>
        <Label Grid.Row="5" Grid.Column="0" Content="Deposit Amount"/>
        <TextBox x:Name="DepositAmountTextBox" Grid.Row="5" Width="200" Grid.Column="1" HorizontalAlignment="Left" TextChanged="DepositAmountTextBox_TextChanged"/>
        <Label x:Name="MessageLabel" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3" Content=""/>
        <Label  Grid.Row="5" Grid.Column="2" Content="Current Deposits" HorizontalAlignment="Center" FontWeight="Bold" FontStyle="Italic" Margin="0,0,149,0"/>
        <Grid  Grid.Row="6" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Bank" Margin="5" />
            <Label Grid.Column="1" Content="Amount" Margin="5" />
        </Grid>
        <ListBox x:Name="TransactionsListBox" Grid.Row="7" Grid.Column="2" Grid.RowSpan="5" Height="150" ItemTemplate="{StaticResource SharedItemTemplate}"  Width="300" HorizontalAlignment="Left" />
        <Grid  Grid.Row="12" Grid.Column="2" HorizontalAlignment="Left" 
               Margin="-5,0,0,0" Width="310">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="TotalAmount" Grid.Column="0" Grid.ColumnSpan="2" Content="" Margin="5" Foreground="White" Background="Red" />
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2">
            <Button x:Name="DepositButton"  Content="Deposit" Width="100" Click="DepositButton_Click" HorizontalAlignment="Left" Background="{DynamicResource ButtonBackground}" Foreground="{DynamicResource ButtonForeground}" />
            <Button x:Name="CloseButton"  Content="Close" Width="100" Click="CloseButton_Click" HorizontalAlignment="Left" Background="{DynamicResource ButtonBackground}" Foreground="{DynamicResource ButtonForeground}" Margin="30,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
