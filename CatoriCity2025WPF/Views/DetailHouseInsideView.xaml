<Window x:Class="CatoriCity2025WPF.Views.DetailHouseInsideView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatoriCity2025WPF.Views"
        mc:Ignorable="d"
        Title="DetailHouseInsideView" Height="450" Width="800" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Canvas x:Name="MainLayout" Width="{Binding ElementName=DetailHouseInsideView, Path=ActualWidth}" 
             Height="{Binding ElementName=DetailHouseInsideView, Path=ActualHeight}" Background="White">
        <Image x:Name="HouseLivingRoomImage"  Canvas.Left="30" />
        <Button Name="ShrinkButton" Width="15" Height="15" Click="ShrinkButton_Click" Canvas.Left="785">
            <Image Source="/Images/closexred.png"></Image>
        </Button>
        <Label Content="$"  Canvas.Left="0" Canvas.Top="20" />
        <TextBox x:Name="FundsLabel" Text="{Binding Path=Funds.Money}" IsReadOnly="True" 
                 Canvas.Left="5" Canvas.Top="20" MouseDown="FundsLabel_MouseDown" MouseMove="FundsLabel_MouseMove" GiveFeedback="FundsLabel_GiveFeedback" />
        <Image x:Name="PersonImage" Canvas.Left="40" Canvas.Top="100"/>
    </Canvas>
</Window>
