<Window x:Class="CatoriCity2025WPF.Views.LandscapeObjectDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatoriCity2025WPF.Views"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Title="LandscapeObjectDetailView" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="LandScapeObjectID:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Left" IsReadOnly="True" Text="{Binding LandScapeObjectID, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Content="Name:" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" TextChanged="NameTextBox_TextChanged" />

        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Content="Description:" VerticalAlignment="Center"/>
        <TextBox x:Name="DescriptionTextbox" Grid.Row="2" Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" GotFocus="DescriptionTextbox_GotFocus" />

        <Label Grid.Row="3" Grid.Column="0" Content="Height:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="3" Grid.Column="2" Content="Width:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="5" Grid.Column="0" Content="xActual:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding xActual, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="5" Grid.Column="2" Content="yActual:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="3" Text="{Binding yActual, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="7" Grid.Column="0" Content="xPercent:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding xPercent, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="7" Grid.Column="2" Content="yPercent:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="7" Grid.Column="3" Text="{Binding yPercent, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="9" Grid.Column="0" Content="ImageName:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding ImageName, UpdateSourceTrigger=PropertyChanged}" />
        <Button Grid.Row="9" x:Name="GetImageNamButton" Grid.Column="4" Width="25" HorizontalAlignment="Right" Content="..." Click="GetImageNamButton_Click" Margin="5"/>

        <Label Grid.Row="10" Grid.Column="0" Content="GroupId:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding GroupId, UpdateSourceTrigger=PropertyChanged}" />
        <Label Grid.Row="11" Grid.Column="0" Content="Home Object:" VerticalAlignment="Center"/>
        <CheckBox Grid.Row="11" Grid.Column="1" IsChecked="{Binding HomeObject, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
        <Label Grid.Row="14" Grid.Column="0" Content="FeatureNote:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="14" Grid.Column="1" Text="{Binding FeatureNote, UpdateSourceTrigger=PropertyChanged}" />


        <Button Grid.Row="15" Grid.Column="2" Width="50" Height="20" HorizontalAlignment="Left" Content="Save" Click="SaveButton_Click" Margin="20,5,5,5"/>
        <Button x:Name="DeleteButton" Grid.Row="15" Grid.Column="1" Height="20" Width="50" HorizontalAlignment="Right" Content="Delete" Click="DeleteButton_Click" />
    </Grid>
</Window>
