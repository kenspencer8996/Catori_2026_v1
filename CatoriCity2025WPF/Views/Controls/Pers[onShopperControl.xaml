<UserControl x:Class="CatoriCity2025WPF.Views.Controls.PersonShopperControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatoriCity2025WPF.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="75" x:Name="UC">
    <Canvas x:Name="MaainLayout" Width="75" Height="200">
        <Border x:Name="MainBorder" Canvas.Left="0" Canvas.Top="0" BorderBrush="#FFF11111" SizeChanged="MainBorder_SizeChanged"
                Height="{Binding ElementName=UC,Path=ActualHeight}" Width="{Binding ElementName=UC,Path=ActualWidth}" >
            <Image x:Name="MainImage" 
             Height="{Binding ElementName=MainBorder,Path=ActualHeight}" Width="{Binding ElementName=MainBorder,Path=ActualWidth}" Source="/Images/badguy_6_wcash.png" />
        </Border>
    </Canvas>
</UserControl>
