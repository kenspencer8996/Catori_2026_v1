<UserControl x:Class="CatoriCity2025WPF.Views.Controls.ShopItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatoriCity2025WPF.Views.Controls"
             mc:Ignorable="d" x:Name="UC" MouseDown="UC_MouseDown"  MouseUp="UC_MouseUp" MouseMove="UC_MouseMove"
             d:DesignHeight="450" d:DesignWidth="800">

        <Canvas>
            <Border x:Name="MainBorder" Canvas.Left="0" Canvas.Top="0" BorderThickness="0" BorderBrush="#FFF11111" SizeChanged="MainBorder_SizeChanged" >
                <Image x:Name="MainImage" Visibility="Visible"
               Height="{Binding ElementName=UC,Path=ActualHeight}" Width="{Binding ElementName=UC,Path=ActualWidth}" 
                   Source="{Binding ItemSource,
                                RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </Border>
        </Canvas>
    
</UserControl>
