<UserControl x:Class="CatoriCity2025WPF.Views.Controls.PoliceStationUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatoriCity2025WPF.Views.Controls" x:Name="PoliceStation_UC"
             mc:Ignorable="d" d:DesignHeight="90" d:DesignWidth="90">
    <Border x:Name="MainBorder" BorderThickness="2" Width="{Binding ElementName=PoliceStation_UC, Path=ActualWidth}"
            Height="{Binding ElementName=PoliceStation_UC, Path=ActualHeight}" AllowDrop="True" DragDrop.Drop="MainBorder_Drop">
        <Canvas x:Name="MainLayout" AllowDrop="True" DragDrop.Drop="MainLayout_Drop"  Width="{Binding ElementName=MainBorder, Path=ActualWidth}"
            Height="{Binding ElementName=MainBorder, Path=ActualHeight}">
            <Image x:Name="PoliceStationImage" Canvas.Left="0" Canvas.Top="0"  Width="{Binding ElementName=MainLayout, Path=ActualWidth}"
            Height="{Binding ElementName=MainLayout, Path=ActualHeight}" />
        </Canvas>
    </Border>
</UserControl>
