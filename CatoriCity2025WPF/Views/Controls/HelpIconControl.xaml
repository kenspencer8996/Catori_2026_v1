<UserControl x:Class="CatoriCity2025WPF.Views.Controls.HelpIconControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatoriCity2025WPF.Views.Controls"
             mc:Ignorable="d" Width="22" Height="22"
             d:DesignHeight="22" d:DesignWidth="22">
    <Grid>
        <Image x:Name="HelpIconImage" Source="/Images/HelpIcon.png" Width="20" Height="20" Cursor="Hand"
                   MouseEnter="HelpIconImage_MouseEnter" MouseLeave="HelpIconImage_MouseLeave" 
               MouseLeftButtonUp="HelpIconImage_MouseLeftButtonUp"/>
    </Grid>
</UserControl>
