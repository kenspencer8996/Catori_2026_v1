<UserControl x:Class="CatoriCity2025WPF.Views.Controls.RobotUC" x:Name="UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatoriCity2025WPF.Views.Controls"
             mc:Ignorable="d" Width="{Binding ElementName=UC, Path=ActualWidth}" 
             Height="{Binding ElementName=UC, Path=ActualHeight}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image x:Name="RobotImage" Stretch="Fill" Source="/Images/DefaultRobotArmt.png" />
    </Grid>
</UserControl>
