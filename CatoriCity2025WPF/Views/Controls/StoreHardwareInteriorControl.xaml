<UserControl x:Class="CatoriCity2025WPF.Views.Controls.StoreHardwareInteriorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatoriCity2025WPF.Views.Controls"
             mc:Ignorable="d" x:Name="UC" Width="500" Height="120"  
             d:DesignHeight="200" d:DesignWidth="120">
    <Border x:Name="MainBorder" Canvas.Left="0" Canvas.Top="0" BorderThickness="0" BorderBrush="#FFF11111" 
             Width="{Binding ElementName=UC, Path=ActualWidth}" 
            Height="{Binding ElementName=UC, Path=ActualHeight}" >
        <Canvas x:Name="MainLayout" Width="{Binding ElementName=MainBorder, Path=ActualWidth}" 
            Height="{Binding ElementName=MainBorder, Path=ActualHeight}">
            <Image x:Name="Factory1InteriorImage" Stretch="Fill" Source="/Images/Store_hardware_Interior.png" Width="{Binding ElementName=UC, Path=ActualWidth}" 
            Height="{Binding ElementName=MainBorder, Path=ActualHeight}"/>


        </Canvas>
    </Border>
</UserControl>
