<UserControl x:Class="CatoriCity2025WPF.Views.Controls.BadPersonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatoriCity2025WPF.Views.Controls"
             mc:Ignorable="d" x:Name="BadPersonControlUC" Loaded="BadGuyUC_Loaded"
             d:DesignHeight="50" d:DesignWidth="50"  Height="50" Width="50" SizeChanged="BadPersonControlUC_SizeChanged">
    <Canvas>
        <Border x:Name="MainBorder" Canvas.Left="0" Canvas.Top="0" BorderBrush="#FFF11111" SizeChanged="MainBorder_SizeChanged" >
            <Image x:Name="MainImage" 
                   Height="{Binding ElementName=BadPersonControlUC,Path=ActualHeight}" Width="{Binding ElementName=BadPersonControlUC,Path=ActualWidth}" />
        </Border>
    </Canvas>
</UserControl>
