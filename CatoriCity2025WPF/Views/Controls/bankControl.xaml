<UserControl x:Class="CatoriCity2025WPF.Views.Controls.BankControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatoriCity2025WPF.Views.Controls"
             mc:Ignorable="d" Loaded="UserControl_Loaded" SizeChanged="UserControl_SizeChanged"
             d:DesignHeight="450" d:DesignWidth="800" x:Name="BusinessUC" >
    <Border x:Name="MainBorder" BorderThickness="2" Width="{Binding ActualWidth, ElementName=BusinessUC}"
            Height="{Binding ActualHeight, ElementName=BusinessUC}"  >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>
        <Canvas x:Name="MainLayout" AllowDrop="True" Grid.Column="0" DragDrop.Drop="MainLayout_Drop" 
                SizeChanged="MainLayout_SizeChanged" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" Canvas.Left="0" Canvas.Top="0">
                <Image x:Name="BusinessImage"  />
  
            </StackPanel>
           

        </Canvas>
        <Button Name="ShowDepositsButton" Width="15" Height="15" Grid.Column="1" VerticalAlignment="Top" Click="ShowDepositsButton_Click">
            <Image Source="/Images/DepositImage.png"></Image>
        </Button>

        </Grid>
    </Border>
</UserControl>
